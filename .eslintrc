{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["react", "import"],
  "globals": {
    "localStorage": true,
    "window": true,
    "document": true
  },
  "rules": {
    "avoidEscape": 0,
    "camelcase": 0,
    "max-len": ["warn", 500],
    // "indent": [
    //   "warn",
    //   2
    // ],
    // "react/jsx-indent": [
    //   "warn",
    //   2
    // ],
    "react/forbid-prop-types": 0,
    "semi": [2, "never"],
    "comma-dangle": ["error", "never"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "no-underscore-dangle": 0,
    "no-console": 0,
    "linebreak-style": 0,
    "react/prop-types": 0,
    "no-confusing-arrow": 0,
    "arrow-parens": 0,
    "react/jsx-one-expression-per-line": 0,
    "no-lonely-if": 0
  }
}
